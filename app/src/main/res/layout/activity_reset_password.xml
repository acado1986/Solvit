<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper2"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3fff"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Send a reset password email link to your registrated account"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etResetEmail"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/custombutton"
            android:gravity="center"
            android:hint="Registrated user mail"
            android:textColorHint="#FFFBF6"
            android:autofillHints="" />


        <Button
            android:id="@+id/btnSendReset"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custombutton2"
            android:text="Send"
            android:textAllCaps="false"
            android:textColor="#FFFBF6" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
