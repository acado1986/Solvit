<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_pending">

    <fragment
        android:id="@+id/nav_pending"
        android:name="com.solvit.mobile.ui.pending.PendingFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_pending" />

    <fragment
        android:id="@+id/nav_completed"
        android:name="com.solvit.mobile.ui.completed.CompletedFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_completed" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.solvit.mobile.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <activity
        android:id="@+id/nav_signout"
        android:name="com.solvit.mobile.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login2" />

</navigation>