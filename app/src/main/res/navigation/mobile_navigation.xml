<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_pending">

    <fragment
        android:id="@+id/nav_pending"
        android:name="com.solvit.mobile.ui.pending.PendingFragment"
        android:label="@string/menu_pending"
        tools:layout="@layout/fragment_pending" />

    <fragment
        android:id="@+id/nav_completed"
        android:name="com.solvit.mobile.ui.completed.CompletedFragment"
        android:label="@string/menu_completed"
        tools:layout="@layout/fragment_completed" />

    <fragment
        android:id="@+id/nav_newnotification"
        android:name="com.solvit.mobile.ui.newnotification.NewNotificationFragment"
        android:label="@string/menu_newnotification"
        tools:layout="@layout/fragment_newnotification" >
        <action
            android:id="@+id/action_nav_newnotification_to_nav_pending"
            app:destination="@id/nav_pending" />
    </fragment>
    <activity
        android:id="@+id/nav_signout"
        android:name="com.solvit.mobile.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login2" />

</navigation>